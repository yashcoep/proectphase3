<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Catalog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .product-card {
            margin-bottom: 20px; /* Add space between rows */
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-end mb-3">
            <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
        <h2 class="mb-4">Catalog</h2>
        <div class="row">
            <% for (let i = startIndex; i < endIndex; i++) { %>
                <div class="col-md-4 product-card">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= products[i].Name %></h5>
                            <p class="card-text"><%= products[i].Description %></p>
                            <p class="card-text">Price: <%= products[i].Price %></p>
                            <label for="quantity">Quantity:</label>
                            <input type="number" id="quantity_<%= products[i].ProductID %>" name="quantity" min="1" value="1">
                            <button onclick="generateQuotation('<%= products[i].Name %>', <%= products[i].Price %>, <%= products[i].ProductID %>)" class="btn btn-primary">Generate Quotation</button>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
        <nav aria-label="Pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
                </li>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                </li>
            </ul>
        </nav>
    </div>

    <script>
        function generateQuotation(name, price, id) {
            const quantity = document.getElementById('quantity_' + id).value;
            const total = price * quantity;
            const quotationText = `Product Name: ${name}\nPrice per unit: ${price}\nQuantity: ${quantity}\nTotal: ${total}`;
            downloadQuotation(quotationText, `${name}_quotation.txt`);
        }

        function downloadQuotation(quotationText, filename) {
            const element = document.createElement('a');
            element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(quotationText));
            element.setAttribute('download', filename);

            element.style.display = 'none';
            document.body.appendChild(element);

            element.click();

            document.body.removeChild(element);
        }
    </script>
</body>
</html>
